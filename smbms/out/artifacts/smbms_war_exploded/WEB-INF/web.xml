<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.test.servl.loginservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>powerla</filter-name>
        <filter-class>com.test.myfilter.powerla</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>powerla</filter-name>
        <url-pattern>/page/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>getname</servlet-name>
        <servlet-class>com.test.servl.getname</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getname</servlet-name>
        <url-pattern>/getname</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>exitsytem</servlet-name>
        <servlet-class>com.test.servl.exitsystem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exitsytem</servlet-name>
        <url-pattern>/exitsystem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>changepass</servlet-name>
        <servlet-class>com.test.servl.changpass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changepass</servlet-name>
        <url-pattern>/changepass</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>charset</filter-name>
        <filter-class>com.test.myfilter.SetCharFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>charset</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>usermar</servlet-name>
        <servlet-class>com.test.servl.usermar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usermar</servlet-name>
        <url-pattern>/usermar</url-pattern>
    </servlet-mapping>
</web-app>